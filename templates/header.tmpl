{{define "header"}}
<html>
<head>
	<meta charset="utf-8">
    <title>Smark</title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
	
	<style>
		* {
			font-family: Monospace;
		}

		h1 {
			color: rgb(255,255,0);
			font-family: Verdana;
		}

		body { 
			background: url("http://getwallpapers.com/wallpaper/full/f/3/f/967889-download-free-pretty-purple-backgrounds-1920x1080-ipad-pro.jpg");
			background-repeat: no-repeat;
			background-size: cover;
		}

		a {
			color: rgb(240,128,128);
		}

		/* Index */
		.a-box {
			width: 450px;
			height: 150px;
			padding-top: 10px;
			padding-left: 20px;
			margin: 6em;
			border-radius: 15px;
			background: rgb(186,85,211, 0.7);
		}

		.a-box i {
    		float: right;
    		right: 0px;
    		padding: 10px;
		}
		
